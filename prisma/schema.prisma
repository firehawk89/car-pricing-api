generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "sqlite"
  url      = env("DATABASE_URL")
}

model User {
  user_id  Int    @id @default(autoincrement())
  email    String @unique
  password String
  reports  Report[]
}

model Report {
  report_id    Int     @id @default(autoincrement())
  author       User    @relation(fields: [user_id], references: [user_id])
  user_id      Int
  price        Decimal
  manufacturer String
  model        String
  year         Int
  longitude    Float
  latitude     Float
  mileage      Float
}
